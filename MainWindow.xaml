<Window x:Class="CalculatorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator" 
        Height="500" 
        Width="350"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">

    <Window.Resources>
        <!-- Number Button Style -->
        <Style x:Key="NumberButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F5F5F5"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Operator Button Style -->
        <Style x:Key="OperatorButtonStyle" TargetType="Button" BasedOn="{StaticResource NumberButtonStyle}">
            <Setter Property="Background" Value="#FF8C00"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFA500"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF7700"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Function Button Style -->
        <Style x:Key="FunctionButtonStyle" TargetType="Button" BasedOn="{StaticResource NumberButtonStyle}">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D0D0D0"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#C0C0C0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Display -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#CCCCCC" 
                BorderThickness="2"
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,10">
            <TextBox x:Name="txtDisplay"
                     Text="0"
                     FontSize="36"
                     FontWeight="Bold"
                     TextAlignment="Right"
                     BorderThickness="0"
                     Background="Transparent"
                     IsReadOnly="True"
                     VerticalContentAlignment="Center"
                     Foreground="#333333"/>
        </Border>

        <!-- Calculator Buttons -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Row 0 -->
            <Button Content="C" Grid.Row="0" Grid.Column="0" Style="{StaticResource FunctionButtonStyle}" Click="Function_Click"/>
            <Button Content="CE" Grid.Row="0" Grid.Column="1" Style="{StaticResource FunctionButtonStyle}" Click="Function_Click"/>
            <Button Content="←" Grid.Row="0" Grid.Column="2" Style="{StaticResource FunctionButtonStyle}" Click="Function_Click"/>
            <Button Content="÷" Grid.Row="0" Grid.Column="3" Style="{StaticResource OperatorButtonStyle}" Click="Operator_Click"/>

            <!-- Row 1 -->
            <Button Content="7" Grid.Row="1" Grid.Column="0" Style="{StaticResource NumberButtonStyle}" Click="Number_Click"/>
            <Button Content="8" Grid.Row="1" Grid.Column="1" Style="{StaticResource NumberButtonStyle}" Click="Number_Click"/>
            <Button Content="9" Grid.Row="1" Grid.Column="2" Style="{StaticResource NumberButtonStyle}" Click="Number_Click"/>
            <Button Content="×" Grid.Row="1" Grid.Column="3" Style="{StaticResource OperatorButtonStyle}" Click="Operator_Click"/>

            <!-- Row 2 -->
            <Button Content="4" Grid.Row="2" Grid.Column="0" Style="{StaticResource NumberButtonStyle}" Click="Number_Click"/>
            <Button Content="5" Grid.Row="2" Grid.Column="1" Style="{StaticResource NumberButtonStyle}" Click="Number_Click"/>
            <Button Content="6" Grid.Row="2" Grid.Column="2" Style="{StaticResource NumberButtonStyle}" Click="Number_Click"/>
            <Button Content="−" Grid.Row="2" Grid.Column="3" Style="{StaticResource OperatorButtonStyle}" Click="Operator_Click"/>

            <!-- Row 3 -->
            <Button Content="1" Grid.Row="3" Grid.Column="0" Style="{StaticResource NumberButtonStyle}" Click="Number_Click"/>
            <Button Content="2" Grid.Row="3" Grid.Column="1" Style="{StaticResource NumberButtonStyle}" Click="Number_Click"/>
            <Button Content="3" Grid.Row="3" Grid.Column="2" Style="{StaticResource NumberButtonStyle}" Click="Number_Click"/>
            <Button Content="+" Grid.Row="3" Grid.Column="3" Style="{StaticResource OperatorButtonStyle}" Click="Operator_Click"/>

            <!-- Row 4 -->
            <Button Content="±" Grid.Row="4" Grid.Column="0" Style="{StaticResource FunctionButtonStyle}" Click="Function_Click"/>
            <Button Content="0" Grid.Row="4" Grid.Column="1" Style="{StaticResource NumberButtonStyle}" Click="Number_Click"/>
            <Button Content="." Grid.Row="4" Grid.Column="2" Style="{StaticResource NumberButtonStyle}" Click="Decimal_Click"/>
            <Button Content="=" Grid.Row="4" Grid.Column="3" Style="{StaticResource OperatorButtonStyle}" Click="Equals_Click"/>
        </Grid>
    </Grid>
</Window>